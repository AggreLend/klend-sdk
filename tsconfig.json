{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["es2022"],
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["mocha", "node", "node_modules/@types", "@types", "node_modules/@coral-xyz/anchor/types"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["tests", "src/client/client.ts", "dist", "node_modules", "examples"]
}
